<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!--Button pressed state-->
    <item android:state_pressed="true">

        <layer-list>
            <item>
                <shape>
                    <corners android:radius="100dp"></corners>
                    <solid android:color="@color/grayTxt"></solid>
                </shape>
            </item>
            <item android:bottom=".3dp" android:top=".1dp">
                <shape>
                    <corners android:radius="100dp"></corners>
                    <solid android:color="@color/fav"></solid>
                    <padding android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp"></padding>
                </shape>
            </item>
        </layer-list>

    </item>


    <!--Button focused state-->
    <item android:state_hovered="true">

        <layer-list>
            <item>
                <shape>
                    <corners android:radius="100dp"></corners>
                    <solid android:color="@color/grayTxt"></solid>
                </shape>
            </item>
            <item android:bottom=".3dp" android:top=".1dp">
                <shape>
                    <corners android:radius="100dp"></corners>
                    <solid android:color="@color/fav"></solid>
                    <padding android:top="5dp" android:bottom="5dp" android:left="10dp" android:right="10dp"></padding>
                </shape>
            </item>
        </layer-list>

    </item>


    <!--Button focused state-->
    <item android:state_focused="true">

        <layer-list>
            <item>
                <shape>
                    <corners android:radius="100dp"></corners>
                    <solid android:color="@color/grayTxt"></solid>
                </shape>
            </item>
            <item android:bottom=".3dp" android:top=".1dp">
                <shape>
                    <corners android:radius="100dp"></corners>
                    <solid android:color="@color/fav"></solid>
                    <padding android:top="5dp" android:bottom="5dp" android:left="10dp" android:right="10dp"></padding>
                </shape>
            </item>
        </layer-list>

    </item>


    <!--Button default state-->
    <item>

        <layer-list>
            <item>
                <shape>
                    <corners android:radius="100dp"></corners>
                    <solid android:color="@color/grayTxt"></solid>
                </shape>
            </item>
            <item android:bottom="1.9dp" android:top=".1dp">
                <shape>
                    <corners android:radius="100dp"></corners>
                    <solid android:color="@color/fav" />
                    <padding android:top="5dp" android:bottom="5dp" android:left="25dp" android:right="25dp"></padding>
                </shape>
            </item>
        </layer-list>

    </item>


</selector>